<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBlack"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <LinearLayout
        android:weightSum="5"
        android:showDividers="middle"
        android:divider="@drawable/empty_tall_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:onClick="homeClick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/nav_icon_size"
                android:layout_height="@dimen/nav_icon_size"
                app:srcCompat="@drawable/ic_baseline_home_24" />

            <TextView
                android:textSize="@dimen/nav_font_size"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_home" />
        </LinearLayout>
        <LinearLayout
            android:onClick="searchClick"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="@dimen/nav_icon_size"
                android:layout_height="@dimen/nav_icon_size"
                app:srcCompat="@drawable/ic_baseline_search_24" />
            <TextView
                android:textSize="@dimen/nav_font_size"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_search"/>
        </LinearLayout>

        <LinearLayout
            android:onClick="newVideoClick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@drawable/ic_plus_circle_solid" />
        </LinearLayout>

        <LinearLayout
            android:onClick="chatClick"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="@dimen/nav_icon_size"
                android:layout_height="@dimen/nav_icon_size"
                app:srcCompat="@drawable/ic_baseline_mail_outline_24" />
            <TextView
                android:textSize="@dimen/nav_font_size"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_chat"/>
        </LinearLayout>

        <LinearLayout
            android:onClick="profileClick"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="@dimen/nav_icon_size"
                android:layout_height="@dimen/nav_icon_size"
                app:srcCompat="@drawable/ic_baseline_person_outline_24" />
            <TextView
                android:textSize="@dimen/nav_font_size"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_user"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>